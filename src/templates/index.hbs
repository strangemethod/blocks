{{#extend "layout"}}
  {{#content "content"}}
    <main id="page" data-page="index">
      {{> (get_partial "hero") title=page.title text=page.text image=page.cover}}

      <section class="container">
        {{#if pages}}
          <h2>Pages</h2>
          <ul class="page-menu">
            {{#each pages}}
              <li>
                <a href="/{{@key}}">{{unescape_html this.title}}</a>
              </li>
            {{/each}}
          </ul>
        {{/if}}
        {{#if editMode}}
        {{editMode}}
          <div class="add-page"></div>
        {{/if}}
      </section>
    </main>
  {{/content}}
{{/extend}}
