{{#extend "layout"}}
	{{#content "content"}}
		<main id="page" data-page="{{id}}">
			{{> (get_partial "hero") title=page.title image=page.cover}}

			{{#each blocks}}
				{{#if (get_component this)}}
					<div class="editor">
						{{> (get_partial (get_component this)) block=this id=@key}}

						{{!-- Section Editor buttons --}}
						<div class="edit-section editor__icons editor__icons--right"></div>
					</div>
				{{/if}}
			{{/each}}

			<section class="container editor">
				<div class="grid">
					<div class="grid-col grid-col--12 add-section"></div>
				</div>
			</section>
		</main>
	{{/content}}
{{/extend}}
