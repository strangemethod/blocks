{{#extend "layout"}}
	{{#content "content"}}
		<main id="page" data-page="{{id}}">
			{{> (get_partial "hero") title=page.title image=page.cover}}

			{{#each blocks}}
				{{#if (get_component this)}}
					<div class="edit-block-wrapper">
						{{> (get_partial (get_component this)) block=this id=@key}}
					</div>
				{{/if}}
			{{/each}}

			<section class="container" data-block="{{id}}">
				<div class="grid">
					<div class="grid-col grid-col--12">
						<section class="editor" data-operation="add" ></section>
						<div class="editor-add">
							<p>Add new block</p>
						</div>
					</div>
				</div>
			</section>
		</main>
	{{/content}}
{{/extend}}
