{{#if editMode}}
	<div class="editor" 
		data-operation="edit"
		data-block-id={{blockId}}
		data-block-type={{blockType}}
		data-field-id={{fieldId}}
		data-field-type={{fieldType}}
		data-image-src={{imageSrc}}
		data-value={{escape_html text}}>
	</div>
{{/if}}
<{{element}} class="text">
	{{unescape_html text}}
</{{element}}>