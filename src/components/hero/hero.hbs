<section class="block hero">
	<img src="{{#if image}}{{image}}{{else}}https://picsum.photos/1920/1080{{/if}}" />
	<div class="hero-overlay">
		<div class="hero-headline">
			<h1>
				{{#if headline}}
					{{headline}}
				{{else}}
					{{title}}
				{{/if}}
			</h1>
			{{#if subheadline}}
				<h2>{{subheadline}}</h2>
			{{/if}}
		</div>
		<div class="hero-footer">
			{{#if date}}
				<p>{{date}}</p>
			{{/if}}
		</div>
	</div>
</section>