<section class="block centered-text container" data-block="{{id}}">
	<div class="grid">
		<div class="grid-col grid-col--2"></div>
		<div class="grid-col grid-col--8">
			{{> text/text					
	  			blockId=id
	  			blockType="text-image"
					editMode=editMode
					element="h2"
	  			fieldId="text"
	  			fieldType="text"
	  			text=text}}
		</div>
		<div class="grid-col grid-col--2"></div>	
	</div>
</section>